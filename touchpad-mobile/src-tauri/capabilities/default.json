{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "log:default",
    "os:default",
    "notification:default",
    "toast:allow-show-toast",
    "fullscreen:allow-full",
    "fullscreen:allow-exit",
    {
      "identifier": "notification:allow-is-permission-granted",
      "allow": [
        {
          "window": "main",
          "url": "http://localhost:1420"
        }
      ]
    }
  ],
  "platforms": ["android"]
}
